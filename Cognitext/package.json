{
  "name": "cognitext",
  "version": "1.0.0",
  "description": "AI-powered text simplification tool",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run build:renderer\" \"npm run start\"",
    "build:renderer": "webpack --mode development --watch",
    "build:renderer:prod": "webpack --mode production",
    "build": "npm run build:renderer:prod && electron-builder",
    "build:win": "npm run build:renderer:prod && electron-builder --win",
    "build:mac": "npm run build:renderer:prod && electron-builder --mac",
    "build:linux": "npm run build:renderer:prod && electron-builder --linux",
    "dist": "npm run build:renderer:prod && electron-builder --publish=never",
    "dist:win": "npm run build:renderer:prod && electron-builder --win --publish=never",
    "dist:mac": "npm run build:renderer:prod && electron-builder --mac --publish=never",
    "dist:linux": "npm run build:renderer:prod && electron-builder --linux --publish=never"
  },
  "build": {
    "appId": "com.cognitext.app",
    "productName": "Cognitext",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "src/**/*",
      "dist/**/*",
      "node_modules/**/*",
      "eng.traineddata",
      "!node_modules/**/*.d.ts",
      "!node_modules/**/*.map"
    ],
    "extraResources": [
      {
        "from": "eng.traineddata",
        "to": "eng.traineddata"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "keywords": [
    "electron",
    "text-simplification",
    "ocr",
    "ai",
    "accessibility"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-react": "^7.23.3",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "css-loader": "^6.10.0",
    "electron": "^30.0.0",
    "electron-builder": "^25.1.6",
    "html-webpack-plugin": "^5.6.0",
    "style-loader": "^3.3.4",
    "tailwindcss": "^3.4.1",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tesseract.js": "^5.0.4"
  }
}
