{
  "manifest_version": 3,
  "name": "Cognitext",
  "version": "1.0.0",
  "description": "AI-powered text simplification tool that works with your local Cognitext app",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": ["http://localhost/*", "https://localhost/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Cognitext - Simplify Text",
    "default_icon": {
      "16": "icons/icon16.svg",
      "32": "icons/icon32.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.svg",
    "32": "icons/icon32.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Simplify current page text"
    }
  }
}
